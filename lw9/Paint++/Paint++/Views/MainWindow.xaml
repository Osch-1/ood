<Window x:Class="Paint__.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paint__.Views"
        xmlns:viewModels="clr-namespace:Paint__.ViewModels"
        mc:Ignorable="d"        
        Title="Paint++" Width="900" Height="900">

    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <local:ToolbarView Height="60" Margin="0,0,0,724"></local:ToolbarView>
        <local:CanvasView DataContext="{Binding CanvasViewModel}" Margin="80,52,80,52"/>
    </Grid>
</Window>
